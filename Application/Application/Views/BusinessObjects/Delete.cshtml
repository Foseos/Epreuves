<h2>Delete</h2>
<form asp-action="Delete" method="post">
    <div>
        Are you sure you want to delete this?
    </div>
    <div>
        <h4>@Model.Name</h4>
        <p>@Model.Description</p>
    </div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
</form>
