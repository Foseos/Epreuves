@*
    Utilisation de classe
*@

@{
    DateTime now = DateTime.Now;
}

<p>Date et heure actuelles : @now.ToString("dd/MM/yyyy HH:mm:ss")</p>

@*
    Utilisation de classe pour calculer l'age
*@
@{
    DateTime birthDate = new DateTime(2000, 7, 30);
    int age = DateTime.Now.Year - birthDate.Year;
    if (birthDate > DateTime.Now.AddYears(-age))
    {
        age--;
    }
}

<p>Age : @age</p>

@*
    Formulaire
    la variable IsPost est vraie si la requête HTTP actuelle est une requête POST et est fausse dans les autres cas
*@

@if (IsPost)
{
    /*
        Si IsPost est vrai, cela signifie que le formulaire a été soumis et que les données sont disponibles dans la collection Request.Form.
        Sinon, le formulaire est affiché à l'utilisateur.
    */
    var name = Request.Form["name"];
    var firstname = Request.Form["firstname"];

    <p>Nom : @name</p>
    <p>Prénom : @firstname</p>
}
else
{
    <form method="post">
        <div>
            <label for="name">Nom :</label>
            <input type="text" id="name" name="name" />
        </div>
        <div>
            <label for="firstname">Prénom :</label>
            <input type="text" id="firstname" name="firstname" />
        </div>
        <div>
            <input type="submit" value="Envoyer" />
        </div>
    </form>
}



